{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "./",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "useDefineForClassFields": false,
    "allowJs": false,
    "moduleResolution": "node",
    "lib": ["ES2021"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "*coverage", "logs", "test", "**/*.spec.ts"],
  "include": ["src/**/*", "eslint.config.mjs", "prettier.config.mjs", "src/**/*.json", "src/environment.d.ts", "certs/**/*", "data"]
}
